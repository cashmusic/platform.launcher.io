{{#banner_main_content}}
	<div class="introductorybanner"><div class="titlespc">{{{banner_title_content}}}</div>
	{{{banner_main_content}}}
	<div class="closelink"><a href="?hidebanner=true">close <span class="icon x_alt"></span></a></div></div>
{{/banner_main_content}}

<style type="text/css">
	a {cursor:pointer;}

	.featured-release {position:relative;width:100%;}
	.cover {width:100%;background-color:#ececed;background-size:auto 100%;background-position:center center;}
	.cover .release-details {visibility:hidden;color:#fff;font-weight:normal;}
	.title {position:absolute;left:0;bottom:0;width:90%;height:19%;padding:5% !important;background-color:rgba(0,0,0,0.6);-webkit-transition:all 0.2s ease-out;-moz-transition: all 0.2s ease-out;-o-transition: all 0.2s ease-out;transition: all  0.2s ease-out;}
	.cover:hover .title {height:90%;}
	.cover:hover .release-details {visibility:visible;}
	.title a {font-weight:bold;color:#fff !important;display:block;width:100%;height:100%;}
	.title a:hover {color:#ff0 !important;}

	.details-three-columns {line-height:1.25em;}
	div.details-three-columns div.col_oneofthree span {display:block;margin:0;padding-left:56px;width:auto;}
	.smallcover {width:48px;height:48px;float:left;margin-right:8px;margin-top:3px;margin-bottom:8px;}

	.display-files {line-height:2em;}
</style>

<h2>Releases</h2>
<div class="assets-releases-row">
{{#featured_releases}}
	<div class="col_oneofthree{{#third_asset}} lastcol{{/third_asset}}">
		<div class="featured-release">
			<div class="cover" style="background-image:url({{cover_url}});">
				<div class="title">
					<a href="{{www_path}}/assets/edit/{{id}}">{{title}}<br /><span class="smalltext release-details">{{{descriptor_string}}}</span></a><br />
				</div>
			</div>
		</div>
	</div>
{{/featured_releases}}
</div>
<div class="clearfix">.</div>
<div class="drawer">
	{{#remaining_releases}}
	<div class="drawercontent details-three-columns">
		<br />
		{{#remaining_releases}}
		<div class="col_oneofthree{{#third_asset}} lastcol{{/third_asset}}">
			<a href="{{www_path}}/assets/edit/{{id}}">
			{{#cover_url}}<img src="{{cover_url}}" class="smallcover" alt="" />{{/cover_url}}
			<span{{^cover_url}} style="padding-left:0;"{{/cover_url}}>{{title}}</span></a>
			<span{{^cover_url}} style="padding-left:0;"{{/cover_url}} class="smalltext fadedtext">{{{descriptor_string}}}</span>
		</div>
		{{#third_asset}}
			</div><div class="clearfix">.</div><br /><div class="details-three-columns">
		{{/third_asset}}
		{{/remaining_releases}}
	</div>
	{{/remaining_releases}}
	<div class="clearfix">.</div>
	<div class="itemnav">
		{{#more_releases}}
		<a class="drawerhandle mininav_flush usecolor1">releases</a>
		{{/more_releases}}
		<a href="{{www_path}}/assets/add/release" class="mininav_flush usecolor1 lightboxed"><span class="icon plus_alt"></span> Add a new release</a>
	</div>
</div>

<br />
<div class="clearfix">.</div><br />
