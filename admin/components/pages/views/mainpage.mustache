{{#defined_page_templates}}
	<br />
	<h2>Your public page</h2>
	<div class="row_seperator">&nbsp;</div>
	<div>
		<div class="col_oneoftwo">

		{{#current_page_template}}
			<label>View it live:</label><br />
			<h3><a href="{{user_page_uri}}" target="_blank">{{user_page_display_uri}}</a></h3>
		</div>
		<div class="col_oneoftwo lastcol">
			<label>Make changes:</label><br />
			<span class="smalltext"><a href="{{www_path}}/account/"><span class="icon polaroid"></span> <b>Change your username/url</b></a></span><br />
			<span class="smalltext"><a href="{{www_path}}/elements/templates/add/"><span class="icon layout-content-left-2"></span> <b>Add a new page template</b></a></span><br />
			<span class="smalltext"><a href="{{www_path}}/elements/templates/edit/{{current_page_template}}"><span class="icon pencil"></span> <b>Edit the current page template</b></a></span><br />

			<div class="drawer noprefix">
				<a class="drawerhandle"><span class="icon browser-windows"></span> <b>Publish a different template</b></a>
				<div class="drawercontent">
					<br />
		{{/current_page_template}}

					<form method="post" action="">
						<label for="template_id">Select a page template to publish:</label><br />
						<select id="change_template_id" name="change_template_id">
							{{{template_options}}}
						</select>
						<div class="row_seperator">&nbsp;</div>
						<input type="submit" value="publish" />
					</form>

		{{#current_page_template}}
				</div>
			</div>
		{{/current_page_template}}

		</div>
	</div>

	<div class="row_seperator">&nbsp;</div>
