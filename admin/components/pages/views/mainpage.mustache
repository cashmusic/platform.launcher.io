{{#defined_page_templates}}
	<br />
	<h4>Your public page</h4>
	
	<div>
		<div class="row">
			<div class="six columns">

			{{#current_page_template}}
				<label>View it live:</label>
				<h5><a href="{{user_page_uri}}" target="_blank">{{user_page_display_uri}}</a></h5>
			</div>
			<div class="six columns spacedtext">
				<label>Make changes:</label>
				<span class="smalltext"><a href="{{www_path}}/account/"><span class="icon polaroid"></span> <b>Change your username/url</b></a></span><br />
