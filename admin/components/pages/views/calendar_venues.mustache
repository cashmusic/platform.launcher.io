<div class="col_oneoftwo">
	<h2>Quick add a venue</h2>
	<p>
		Quickly add a venue with just the basics.
	</p>

	<form accept-charset="UTF-8" method="post" action="{{www_path}}/calendar/venues/add/" name="quick_add_venue">
		<input type="hidden" name="dovenueadd" value="makeitso" />

		<label for="venue_name">Name</label><br />
		<input type="text" id="venue_name" name="venue_name" value="" placeholder="Venue Name" />
		
		<div class="row_seperator">.</div>
		<label for="venue_city">City</label><br />
		<input type="text" id="venue_city" name="venue_city" value="" placeholder="City" />
		
		<div class="row_seperator">.</div>
		<label for="venue_region">State / Province / Region</label><br />
		<input type="text" id="venue_region" name="venue_region" value="" placeholder="Region" />

		<div class="row_seperator">.</div>

		<label for="venue_country">Country</label><br />
		<select id="venue_country" name="venue_country">
			{{{country_codes}}}
		</select>

		<div class="row_seperator">.</div><br />
		<input class="button" type="submit" value="Add That Venue" />
	
	</form>
</div>
<div class="col_oneoftwo lastcol">
	<h2>Add a venue</h2>
	<p>
		<a href="{{www_path}}/calendar/venues/add/">Add a venue with all details.</a>
	</p>
	
	<div class="row_seperator">.</div>
	<h2>All venues</h2>
	{{#all_venues}}
	<ul class="alternating">
		{{#all_venues}}
		<li>
			<b>{{name}}</b> // <span class="nobr">{{formatted_location}}</span>
			<div class="itemnav">
				<a href="{{www_path}}/calendar/venues/edit/{{id}}" class="mininav_flush"><span class="icon search"></span> Details</a> 
				<a href="{{www_path}}/calendar/venues/delete/{{id}}" class="mininav_flush needsconfirmation"><span class="icon cancel-circle"></span> Delete</a>
			</div>
		</li>
		{{/all_venues}}
	</ul>
	{{/all_venues}}

	{{^all_venues}}
	<p>No venues were found.</p>
	{{/all_venues}}
</div>
